<div class="col-12 col-md-6 col-lg-4">
	<!-- Single Featured Post -->
	<% recentArticles.forEach(article => { %>
	<div class="single-blog-post small-featured-post d-flex">
		<div class="post-thumb">
			<a href="#"><img src="img/bg-img/<%= article.article_image %>" alt=""></a>
		</div>
		<div class="post-data">
			<a href="#" class="post-catagory"><%= article.article_title %></a>
			<div class="post-meta">
				<a href="#" class="post-title">
					<h6><%= article.article_summary %></h6>
				</a>
				<p class="post-date"><%= article.article_postdate %></p>
			</div>
		</div>
	</div>
	<% }) %>
</div>